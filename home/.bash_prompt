#  Echo git prompt
git-prompt() {
	if git rev-parse --is-inside-work-tree &> /dev/null; then
		echo " [$(git symbolic-ref --quiet --short HEAD || git rev-parse --short HEAD || echo "unknown")]"
	fi
}

#  Colorize the user name red if the user is logged in as root; otherwise, colorize the user name yellow
if [[ "${USER}" == "root" ]]; then
	color_user="${color_solarized_bold_red}"
else
	color_user="${color_solarized_bold_yellow}"
fi

#  Colorize the host name red if the user is logged in via ssh; otehrwise, colorize the host name yellow
if [[ "${SSH_TTY}" ]]; then
	color_host="${color_solarized_bold_red}"
else
	color_host="${color_solarized_bold_yellow}"
fi

color_pwd="${color_solarized_bold_blue}"

color_git_prompt="${color_solarized_bold_green}"

#  Set the top-level command line prompt
PS1=
PS1="${PS1}\[${color_user}\]\u"
PS1="${PS1}\[${color_normal}\]@"
PS1="${PS1}\[${color_host}\]\h"
PS1="${PS1}\[${color_normal}\]:"
PS1="${PS1}\[${color_pwd}\]\w"
PS1="${PS1}\[${color_git_prompt}\]\$(git-prompt)"
PS1="${PS1}\[${color_normal}\] \$ "
